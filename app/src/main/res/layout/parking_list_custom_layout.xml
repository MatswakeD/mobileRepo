<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Parking Name"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ParkingImage"
        android:layout_toEndOf="@+id/ParkingImage"
        android:layout_marginStart="41dp"
        android:id="@+id/tv_parkingName_parkingList" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_place_black_24dp"
        android:layout_marginStart="22dp"
        android:id="@+id/ParkingImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="Parking Bays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:id="@+id/tv_parkingCity"
        android:layout_below="@+id/tv_parkingName_parkingList"
        android:layout_alignStart="@+id/tv_parkingName_parkingList" />

    <TextView
        android:text="parking location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:id="@+id/tv_numBay"
        android:layout_below="@+id/tv_parkingCity"
        android:layout_alignStart="@+id/tv_parkingCity" />
</RelativeLayout>