<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dee_kay.myapplication.Tab_1">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="0dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_person_black2_24dp"
                    app:civ_border_color="@android:color/white"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:src="@drawable/ic_email_black_24dp"
                        android:tint="@android:color/black"/>


                <TextView
                    android:id="@+id/tv_userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="driver@gmail.com"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@android:color/white"/>
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#B0BEC5"
            android:gravity="center">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="User information"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    />

            </GridLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round"
            android:padding="16dp"
            android:weightSum="1">

            <EditText
                android:id="@+id/et_userFirstname"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColorHint="@android:color/black"
                android:gravity="center"
                android:hint="First name"
                android:textSize="15dp"
                android:background="@drawable/rightroundcolor"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/et_userLastName"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColorHint="@android:color/black"
                android:gravity="center"
                android:hint="Last name"
                android:textSize="15dp"
                android:background="@drawable/rightroundcolor"
                android:layout_marginBottom="10dp"
                />


            <EditText
                android:id="@+id/et_ContactNumber"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColorHint="@android:color/black"
                android:gravity="center"
                android:hint="Cell phone"
                android:textSize="15dp"
                android:background="@drawable/rightroundcolor"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/et_telephone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColorHint="@android:color/black"
                android:gravity="center"
                android:hint="Telephone"
                android:textSize="15dp"
                android:background="@drawable/rightroundcolor"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/et_UserAddress"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColorHint="@android:color/black"
                android:gravity="center"
                android:hint="Address"
                android:textSize="15dp"
                android:background="@drawable/rightroundcolor"
                android:layout_marginBottom="10dp"
                />
            <Button
                android:id="@+id/btn_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@android:color/black"
                android:backgroundTint="#03a9f4"/>

            <TextView
                android:id="@+id/tv_profile_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile status"
                android:layout_gravity="center"
                android:textStyle="normal"
                android:layout_margin="2dp"
                android:layout_marginBottom="0dp"
                android:visibility="invisible"
                android:textColor="#d50000"/>



        </LinearLayout>



    </android.support.design.widget.AppBarLayout>




</android.support.design.widget.CoordinatorLayout>
