<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_booking"
    android:background="@drawable/eparkingbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dee_kay.myapplication.Booking"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:background="#ffff"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/end_layout">



        <TextView
            android:text="End Time"
            android:inputType="text"
            android:background="#455A64"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/tv_endTime"
            android:layout_weight="1" />

        <Button
            android:text="End Time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:id="@+id/btn_endTime"
            android:backgroundTint="#03a9f4"
            android:layout_weight="1" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/start_layout"
        >


        <TextView
            android:text="Start time"
            android:inputType="text"
            android:background="#455A64"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/tv_StartingTime"
            android:layout_weight="1" />

        <Button
            android:text="Start Time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:id="@+id/btn_Starting"
            android:backgroundTint="#03a9f4"
            android:layout_weight="1" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:weightSum="1">

    <Button
        android:text="Place booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:id="@+id/btn_book"
        android:backgroundTint="#03a9f4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_weight="0.99" />

    </LinearLayout>
</RelativeLayout>
