<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_booking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dee_kay.myapplication.Booking"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/round"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:text="BOOKING"
            android:textAlignment="center"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/oval"
            android:hint="Parking Name"
            android:id="@+id/parking_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/oval"
            android:hint="Parking City"
            android:id="@+id/parking_city" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/oval"
            android:hint="Parking Agent Name"
            android:id="@+id/parking_agent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/oval"
            android:hint="Number of bay"
            android:id="@+id/tv_numOfbays" />

        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.63">

            <TextView
                android:layout_width="226dp"
                android:layout_height="35dp"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/oval"
                android:hint="Booking Start time"
                android:id="@+id/booking_startTime"
                android:layout_weight="0.14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_schedule_black_24dp"
                android:background="@drawable/noborder"
                android:id="@+id/btn_starTime"
                android:layout_weight="0.05" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.63">

            <TextView
                android:layout_width="226dp"
                android:layout_height="35dp"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/oval"
                android:hint="Booking End time"
                android:id="@+id/booking_endTime"
                android:layout_weight="0.14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_schedule_black_24dp"
                android:background="@drawable/noborder"
                android:id="@+id/btn_endTime"
                android:layout_weight="0.05" />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        >

    <Button
            android:text="Place Booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_book"
            android:background="@drawable/oval"
            android:backgroundTint="#03a9f4"
            android:layout_weight="0.14" />

    </LinearLayout>

    </LinearLayout>


</RelativeLayout>
