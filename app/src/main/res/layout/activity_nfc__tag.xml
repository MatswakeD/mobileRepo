<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nfc__tag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dee_kay.myapplication.NFC_TAG">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/round"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/tv_nfcTag"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:selectAllOnFocus="true"
        android:textColorHint="@android:color/black"
        android:gravity="center"
        android:hint="Parking Timer"
        android:textSize="15dp"
        android:background="@drawable/rightroundcolor"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />


    <ListView
        android:background="#B0BEC5"
        android:id="@+id/hoursList_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp" />
    </LinearLayout>

</LinearLayout>
