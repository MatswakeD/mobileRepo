<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="25dp"
    android:layout_marginTop="25dp"
    tools:context="com.example.dee_kay.myapplication.Registration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="16dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/round"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000"

            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:text="REGISTRATION"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/et_firstName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:selectAllOnFocus="true"
            android:gravity="center"
            android:textColorHint="@android:color/black"
            android:hint="First name"
            android:textSize="15dp"
            android:background="@drawable/rightroundcolor"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />


        <EditText
            android:id="@+id/et_LastName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:selectAllOnFocus="true"
            android:textColorHint="@android:color/black"
            android:gravity="center"
            android:hint="Last name"
            android:textSize="15dp"
            android:background="@drawable/rightroundcolor"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/et_EmailAddress"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:selectAllOnFocus="true"
            android:textColorHint="@android:color/black"
            android:hint="Email Address"
            android:gravity="center"
            android:textSize="15dp"
            android:background="@drawable/rightroundcolor"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/et_Password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:selectAllOnFocus="true"
            android:textColorHint="@android:color/black"
            android:hint="Password"
            android:gravity="center"
            android:textSize="15dp"
            android:background="@drawable/rightroundcolor"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/et_reEnterPassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:selectAllOnFocus="true"
            android:gravity="center"
            android:textColorHint="@android:color/black"
            android:hint="Confirm password"
            android:textSize="15dp"
            android:background="@drawable/rightroundcolor"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/btn_SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@android:color/black"
            android:backgroundTint="#03a9f4"/>

        <TextView
            android:id="@+id/tv_registrationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:textSize="15sp"
            android:text="Registration Status"
            android:textColor="#00C853"
            android:textStyle="bold"/>



    </LinearLayout>

</RelativeLayout>
