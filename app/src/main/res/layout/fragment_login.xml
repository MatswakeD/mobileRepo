<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="com.example.dee_kay.myapplication.Login"
    android:layout_marginBottom="28dp"
    android:layout_marginTop="50dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/round"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:text="LOG IN"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/et_EmailAddress"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:selectAllOnFocus="true"
            android:textColorHint="@android:color/black"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:hint="Enter Email Address"
            android:textSize="15dp"
            android:background="@drawable/rightroundcolor"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
             />


        <EditText
            android:id="@+id/et_Password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:selectAllOnFocus="true"
            android:inputType="textPassword"
            android:textColorHint="@android:color/black"
            android:gravity="center"
            android:hint="Enter Password"
            android:textSize="15dp"
            android:background="@drawable/rightroundcolor"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
             />


        <Button
            android:id="@+id/btn_SignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="@android:color/white"
            android:backgroundTint="#01579b"/>

        <TextView
            android:id="@+id/tv_loginStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFFF"
            android:textSize="15sp"
            android:visibility="invisible"
            android:text="log in status"
            android:textColor="#00C853"
            android:textStyle="bold"/>




    </LinearLayout>

</RelativeLayout>
